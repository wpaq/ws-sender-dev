{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs",   
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strictPropertyInitialization": false,
    "esModuleInterop": true, 
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
